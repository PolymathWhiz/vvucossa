   <div class="wrapper">
        <div class="container">
            <div class="row">
                <div class="col s12" style="margin-top: 20px;">
                    <center>
                        <%= image_tag 'def-img', class: 'circle responsive-img' %>
                        <p class="dash-name">Welcome, <%= @user.full_name%>!</p>

                        <div class="">
                            <p>Privilege: <span>Admin</span></p>
                            <a href="#topicmodal" class="btn flat modal-trigger" style="margin-bottom: 40px;">Create Topic</a>
                        </div>
                    </center>
                </div>
            </div>
        </div>
    </div>

    <div class="section"></div>
    <div class="section"></div>

    <div class="container">
      <div class="row">
        <div class="col s12">
          <h5 class="base_color">Recent Topics</h5>
        </div>
      </div>
    </div>


<!-- Modal structure -->
<%= form_for(@topic, url: topics_path, remote:true) do |f| %>
<div id="topicmodal" class="modal">
  <div class="modal-content">
    <h5>
      New Topic
    </h5>
    <div class="divider"></div>
    
        <div class='row'>
          <div class='input-field col s12'>
            <%= f.text_field :title, class: 'validate' %>
            <label for='title'>Title</label>
          </div>
        </div>

        <div class='row'>
          <div class='input-field col s12'>
            <%= f.text_area :description, class: 'validate', placeholder: 'Write something nice...' %>
            <label for='description'>Description</label>
          </div>
        </div>

  </div>
  <div class="modal-footer">
    <a href="" class="modal-action modal-close waves-effect waves-green btn-flat">Cancel</a>
    <%= f.submit "Post", class: 'modal-action waves-effect waves-green btn-flat' %>
    <%#= button_tag "Post2", data: { disable_with: "Please wait..." }, class: 'modal-action waves-effect waves-green btn-flat' %>
  </div>
</div>

<% end %>