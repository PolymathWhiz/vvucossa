<style>
    body {
      background: #fff;
    }

    .input-field input[type=date]:focus + label,
    .input-field input[type=text]:focus + label,
    .input-field input[type=email]:focus + label,
    .input-field input[type=password]:focus + label {
      color: #e91e63;
    }

    .input-field input[type=date]:focus,
    .input-field input[type=text]:focus,
    .input-field input[type=email]:focus,
    .input-field input[type=password]:focus {
      border-bottom: 2px solid #e91e63;
      box-shadow: none;
    }
</style>

  <div class="section"></div>
  <main>
    <center>
      <div class="section"></div>
      <div class="section"></div>

      <div class="container">
        <div class="z-depth-1 grey lighten-4 row" style="display: inline-block; padding: 32px 48px 0px 48px; border: 1px solid #EEE;">

          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "col s12"}) do |f| %>
    
            <div class='row'>
              <div class='col s12'>
                <h5 class="indigo-text">SIGN IN</h5>
              </div>
            </div>
            
            <div class="row">
              <div class="col s12">
                <%= render 'shared/flash_message' %>
              </div>
            </div>

            <div class='row'>
              <div class='input-field col s12'>
                <%= f.email_field :email, class: 'validate' %>
                <label for='email'>Email</label>
              </div>
            </div>

            <div class='row'>
              <div class='input-field col s12'>
                <%= f.password_field :password, autocomplete: "off", class: 'validate' %>
                <label for="password_field">Password</label>
              </div>
            </div>
            <% if devise_mapping.rememberable? -%>
              <div class="row">
                <div class="col s12">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              </div>
            <% end -%>
            <center>
              <div class='row'>
                <%= f.submit "Log in", class: 'col s12 btn btn-md waves-effect indigo' %>
              </div>
            </center>
          <% end %>
        </div>
      </div>
      Don't have an account? <%= render "devise/shared/links" %>
    </center>

    <div class="section"></div>
    <div class="section"></div>
  </main>
